<RDF:RDF xmlns:RDF="http://www.w3.org/1999/02/22-rdf-syntax-ns#" 
    xmlns:chrome="http://www.mozilla.org/rdf/chrome#"> 

    <RDF:Seq about="urn:mozilla:package:root"> 
      <RDF:li resource="urn:mozilla:package:threadvis"/> 
    </RDF:Seq> 

    <RDF:Description about="urn:mozilla:package:threadvis" 
          chrome:displayName="ThreadVis"
          chrome:author="Alexander C. Hubmann" 
          chrome:name="threadvis"
          chrome:extension="true"
          chrome:description="Displays a small graphic visualising the thread (context) of the currently selected email."> 
    </RDF:Description>

    <RDF:Seq about="urn:mozilla:overlays">
        <RDF:li resource="chrome://messenger/content/msgHdrViewOverlay.xul" />
        <RDF:li resource="chrome://communicator/content/pref/pref.xul" />
        <RDF:li resource="chrome://messenger/content/preferences/preferences.xul" />
    </RDF:Seq>

    <RDF:Seq about="chrome://messenger/content/msgHdrViewOverlay.xul">
        <RDF:li>chrome://threadvis/content/ThreadVis.xul</RDF:li>
    </RDF:Seq>

    <RDF:Seq about="chrome://communicator/content/pref/pref.xul">
        <RDF:li>chrome://threadvis/content/Preferences.xul</RDF:li>
    </RDF:Seq>

    <RDF:Seq about="chrome://messenger/content/preferences/preferences.xul">
        <RDF:li>chrome://threadvis/content/Preferences.xul</RDF:li>
    </RDF:Seq>
</RDF:RDF>
