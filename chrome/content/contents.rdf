<RDF:RDF xmlns:RDF="http://www.w3.org/1999/02/22-rdf-syntax-ns#" 
    xmlns:chrome="http://www.mozilla.org/rdf/chrome#"> 

    <RDF:Seq about="urn:mozilla:package:root"> 
      <RDF:li resource="urn:mozilla:package:threadarcsjs"/> 
    </RDF:Seq> 

    <RDF:Description about="urn:mozilla:package:threadarcsjs" 
          chrome:displayName="Thread Arcs Visualisation"
          chrome:author="Alexander C. Hubmann" 
          chrome:name="threadarcsjs"
          chrome:extension="true"
          chrome:description="Displays a small graphic visualising the thread (context) of the currently selected email."> 
    </RDF:Description>

    <RDF:Seq about="urn:mozilla:overlays">
      <RDF:li resource="chrome://messenger/content/msgHdrViewOverlay.xul" />
      <RDF:li resource="chrome://messenger/content/mailWindowOverlay.xul" />
    </RDF:Seq>

    <RDF:Seq about="chrome://messenger/content/msgHdrViewOverlay.xul">
      <RDF:li>chrome://threadarcsjs/content/ThreadArcs.xul</RDF:li>
    </RDF:Seq>

    <RDF:Seq about="chrome://messenger/content/mailWindowOverlay.xul">
      <RDF:li>chrome://threadarcsjs/content/MozillaMenuOverlay.xul</RDF:li>
    </RDF:Seq>

</RDF:RDF>
